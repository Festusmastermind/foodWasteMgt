@model FoodItemViewModel
@{
    ViewData["title"] = "WasteNoFood";
    ViewData["base"] = "Supply Excess Food";
    ViewData["sub"] = "waste Below";
}

<div class="col-md-12">
    <div class="container">
        <div class="card card-solid shadow-lg">
            <div class="card-header">Welcome To <i>WasteNoFood</i> <small>thanks for your donation</small></div>
            <div class="card-body pb-0">
                <form method="post" asp-action="AddFoodWaste" asp-controller="WasteNoFood" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                  
                        <input asp-for="ApplicationUserId" value="@ViewBag.userid" hidden />
                        <div class="col-12 form-group">
                            <label asp-for="CategoryType" class="control-label"></label>
                            <select asp-for="CategoryType" asp-items="Html.GetEnumSelectList<FoodCategory>()"
                                    class="custom-select">
                                <option value="">Select appropriate FoodType</option>
                            </select>
                        </div>
                        <div class="col-12 form-group">
                            <label asp-for="Weight"></label>
                            <input asp-for="Weight" class="form-control" placeholder="Enter your weight in kg e.g 22.0kg" />
                        </div>
                        <div class="col-12 form-group">
                            <div class="custom-file">
                                <input asp-for="Photo" class="form-control custom-file-input" />
                                <label class="custom-file-label">Choose pics..</label>
                            </div>
                        </div>
                        <div class="form-group ml-2">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a asp-action="Index" asp-controller="WasteNoFood" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Go Back</a>
                            <a asp-action="dashboard" asp-controller="WasteNoFood" class="btn btn-success"><i class="fas fa-arrow-right"></i>Available Items</a>
                        </div>
                  
                </form>
            </div>
        </div>
    </div>
</div>
    @section Scripts {
        <script>
            $(document).ready(function () {
                $(".custom-file-input").on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next(".custom-file-label").html(fileName);
                });
            });
        </script>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
       <partial name="_MessageScriptsPartial" />
    }
